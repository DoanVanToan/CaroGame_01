<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.example.framgia.carobluetooth.ui.activity.BoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_board_height"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_back"
            style="@style/button_board_screen"
            android:src="@drawable/ic_back"/>

        <ImageButton
            android:id="@+id/image_button_undo"
            style="@style/button_board_screen"
            android:src="@drawable/ic_undo"/>

        <ImageButton
            android:id="@+id/image_button_exit"
            style="@style/button_board_screen"
            android:src="@drawable/ic_exit"/>

        <ImageButton
            android:id="@+id/image_button_search"
            style="@style/button_board_screen"
            android:src="@drawable/ic_search"/>

        <ImageButton
            android:id="@+id/image_button_visibility"
            style="@style/button_board_screen"
            android:src="@drawable/ic_visibility"/>

    </LinearLayout>

    <com.example.framgia.carobluetooth.ui.customview.BoardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/layout_profile_player1"
            layout="@layout/layout_player_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_play"/>

        <include
            android:id="@+id/layout_profile_player2"
            layout="@layout/layout_player_item"
            android:layout_width="@dimen/layout_player_item_width"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>
