<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.framgia.carobluetooth.ui.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundCaro"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="@string/text_settings"
            android:textSize="@dimen/text_size_settings"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <CheckBox
            android:id="@+id/checkbox_block_two_head_win"
            style="@style/item_checkbox_settings"
            android:text="@string/block_two_head_win"/>

        <include layout="@layout/line_break"/>

        <CheckBox
            android:id="@+id/checkbox_sound"
            style="@style/item_checkbox_settings"
            android:text="@string/sound"/>

        <include layout="@layout/line_break"/>
    </LinearLayout>
</LinearLayout>
